video{
  position: absolute;
  top: 420rpx;
  width: 648rpx;
  height: 366rpx;
  z-index: 2;
}

@keyframes fade {
  from { opacity: 1.0;}
  50% { opacity: 0.5;}
  to { opacity: 1.0;}
}

@-webkit-keyframes fade {
  from { opacity: 1.0; }
  50% { opacity: 0.5; }
  to { opacity: 1.0;}
}

.deng{
  width: 100%;
  height: 100vh;
  animation:fade 3000ms infinite;
  -webkit-animation:fade 3000ms infinite;
}

.guanzhong,.text{
  width: 100%;
